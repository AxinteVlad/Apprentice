<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/theirTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="@string/Rose"/>
    android:layout_alignBottom="@+id/message_body_you"
    android:layout_marginLeft="10dp"
    android:layout_toEndOf="@+id/message_body_you"
    android:text="21:05"
    android:textSize="10dp" />

    <TextView
        android:id="@+id/message_body_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/avatar"
        android:background="@drawable/their_message"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textColor="#000"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/camera_take_their"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/their_message"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/avatar"
        android:layout_marginStart="50dp"
        android:layout_marginTop="19dp"
        android:padding="10dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/avatar"
        android:layout_marginStart="68dp"
        android:paddingBottom="4dp"
        android:text="Rose"
        android:textSize="10dp" />

</RelativeLayout>