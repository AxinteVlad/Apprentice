<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuestFinishActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/appTextColor"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:text="Dupa ce termini cursul te rugam sa faci o poza si sa o uploadezi aici."/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/sunglasses"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginTop="30dp">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_upload_quest"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:text="Chose photo"
        android:textColor="@color/appTextColor"
        app:backgroundTint="@color/appTurq"/>



</LinearLayout>


</LinearLayout>