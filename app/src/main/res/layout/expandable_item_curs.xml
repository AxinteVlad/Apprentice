<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="2"
    android:background="@color/appBackgroundColor">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageViewPlus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_plus_green_24dp" />

        <TextView
            android:id="@+id/TextViewPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appTextColor"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/ButtonBeginQuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/appTurq"
            android:text="Begin"
            android:textColor="@color/appTextColor"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:elevation="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageViewMinus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_minus_red_24dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="6dp"/>

        <TextView
            android:id="@+id/TextViewContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="start"
            android:textColor="@color/appTextColor"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>